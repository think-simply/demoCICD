{
  "default": {
    "paths": [
      "tests/features/"
    ],
    "require": [
      "tests/src/steps/*.js",
      "tests/src/pages/*.js",
      "tests/src/utility/*.js"
    ],
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "format": [
      [
        "html",
        "cucumber-report.html"
      ],
      "summary",
      "progress-bar",
      "json:./cucumber-report.json"
    ]
  }
}